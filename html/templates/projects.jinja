{% import "macros.jinja" as macros %}

<!DOCTYPE html>
<html>
  <head>
    <title>{{ site_title }} - Projects</title>

    {{ macros.setup(vue_url, icon, css_url) }}

    {{ macros.meta(tagline, site_url, site_image, color) }}
  </head>

  <!-- <BG> <TXT> <DISP> <SUBD> <H> <W> <M> <P> <ETC> <MQ:ORD>-->

  <body class="scrollbar-hide">
    <div id="container" class="bg-gray-800 text-gray-200 flex flex-row min-h-screen w-screen pb-6 md:flex-col">

      {{ macros.navbar(active, site_url) }}

      <div id="post-container" class="w-2/3 mr-11 ml-11 self-center md:ml-0 md:mr-0">
        <div class="bg-gray-700 text-center flex-col mt-6 px-6 rounded-lg border-2 border-fuchsia-400 shadow-lg shadow-gray-900">
          <h1 class="text-2xl font-bold pt-6">Projects</h1>
          <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
          <h2 class="text-xl -mb-3.5">Why is there nothing here?</h2>
          <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
          <p class="pb-1 -mb-4">
            This section is currently a placeholder and will eventually be updated with posts of all of my current and previous projects
          </p>
          <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
          <p class="pb-2 text-xs">Post by Ayla - 11/30/2022 - 2:32PM - Thanks for visiting!</p>
        </div>
      </div>
    </div>
  </body>
</html>
