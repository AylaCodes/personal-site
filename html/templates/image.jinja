<!DOCTYPE html>
<html>
  <head>
    <title>{{ site_title }} - {{ file_name }}</title>

    <script type="module">
      import { createApp } from '{{ vue_url }}'

      createApp({
        delimiters: ["[[", "]]"]
      }).mount("#vm");
    </script>

    <link rel="icon" type="image/x-icon" href="{{ icon }}" />
    <link rel="stylesheet" type="text/css" href="{{ css_url }}" />

    <meta property="og:title" content="{{ tagline }}"/>
    <meta property="og:description" content="{{ description }}"/>
    <meta property="og:url" content="{{ base_url}}/{{ file_name }}"/>
    <meta property="og:image" content="{{ url }}"/>
    <meta property="og:type" content="article"/>
    <meta data-react-helmet="true" name="theme-color" content="{{ light_purple }}"/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta content="{{ light_purple }}" data-react-helmet="true" name="theme-color"/>
  </head>

  <body class="scrollbar-hide">
    <div id="container" class="bg-slate-800 text-gray-200 flex flex-row min-h-screen w-screen pb-6 md:flex-col">
      <aside class="text-center w-32 top-0 sticky">
        <nav class="bg-slate-900 font-bold flex flex-col h-min -mt-2 p-6 top-0 sticky shadow-lg shadow-gray-900 md:flex-row md:h-16 md:w-screen md:-mt-0">
          <h1 class="text-purple-500 text-xl mb-6 self-center md:inline-flex md:mb-0 md:mr-6">Wolfie's Space</h1>
          <a class="self-center" href="#">
            <div class="bg-slate-700 h-12 w-32 md:h-16">
              <p class="pt-3 md:pt-5">Home</p>
            </div>
          </a>
          <a class="self-center" href="#">
            <div class="h-12 w-32 hover:bg-slate-700 hover:duration-[250ms] md:h-16">
              <p class="pt-3 md:pt-5">About</p>
            </div>
          </a>
          <a class="self-center" href="#">
            <div class="h-12 w-32 hover:bg-slate-700 hover:duration-[250ms] md:h-16">
              <p class="pt-3 md:pt-5">Projects</p>
            </div>
          </a>
          <a class="self-center" href="#">
            <div class="h-12 w-32 hover:bg-slate-700 hover:duration-[250ms] md:h-16">
              <p class="pt-3 md:pt-5">Contact</p>
            </div>
          </a>
        </nav>
      </aside>
      <!-- <BG> <TXT> <DISP> <SUBD> <H> <W> <M> <P> <ETC>-->
      <div id="post-container" class="w-2/3 mr-11 ml-11 self-center md:mr-0 md:ml-0">
        <div class="mt-6 flex-col rounded-lg border-2 border-purple-500 bg-slate-700 px-6 text-center shadow-lg shadow-gray-900">
          <h1 class="pt-6 text-2xl font-bold">{{ file_name }}</h1>
          <hr class="mt-6 mb-1 h-px border-0 bg-slate-800" />
          <img alt="{{ file_name }}" src="{{ url }}" class="max-h-[40rem] mx-auto pt-5"/>
          <hr class="mt-6 mb-1 h-px border-0 bg-slate-800" />
          <p class="pb-2 text-xs">Post by {{ author }} - {{ timestamp }} - Thanks for visiting!</p>
        </div>
      </div>
    </div>
  </body>
</html>
