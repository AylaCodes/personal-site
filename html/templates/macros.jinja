{% macro setup(vue_url, icon, css_url) %}
<script type="text/js" src="{{ vue_url }}"></script>
<script type="text/js" defer>
  const { createApp } = Vue;

  createApp({
    delimiters: ["[[", "]]"]
  }).mount("#container");
</script>

<link rel="icon" type="image/x-icon" href="{{ icon }}"/>
<link rel="stylesheet" type="text/css" href="{{ css_url }}"/>
{% endmacro %}

{% macro meta(tagline, site_url, site_image, color) %}
<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta property="og:title" content="{{ tagline }}"/>
<meta property="og:url" content="{{ site_url }}"/>
<meta property="og:image" content="{{ site_image }}"/>
<meta property="og:type" content="website"/>
<meta data-react-helmet="true" name="theme-color" content="{{ color }}"/>
<meta name="twitter:card" content="summary_image"/>
<meta content="{{ color }}" data-react-helmet="true" name="theme-color"/>
{% endmacro %}

{% macro navbar(active, site_url) %}
<aside class="text-center w-32 top-0 sticky">
  <nav class="bg-gray-900 font-bold flex flex-col h-min -mt-2 p-6 top-0 sticky shadow-lg shadow-gray-900 md:flex-row md:h-16 md:w-screen md:-mt-0">
    <h1 class="text-fuchsia-400 text-xl mb-6 self-center md:inline-flex md:mb-0 md:mr-6">Wolfie's Space</h1>
      <a class="self-center" href="{{ site_url }}">
        <div id="homeButton" class="h-12 w-32 hover:bg-gray-700 hover:duration-[250ms] [&.active]:bg-gray-700 md:h-16">
          <p class="pt-3 md:pt-5">Home</p>
        </div>
      </a>
      <a class="self-center" href="{{ site_url }}/about">
        <div id="aboutButton" class="h-12 w-32 hover:bg-gray-700 hover:duration-[250ms] [&.active]:bg-gray-700 md:h-16">
          <p class="pt-3 md:pt-5">About</p>
        </div>
      </a>
      <a class="self-center" href="{{ site_url }}/projects">
        <div id="projectsButton" class="h-12 w-32 hover:bg-gray-700 hover:duration-[250ms] [&.active]:bg-gray-700 md:h-16">
          <p class="pt-3 md:pt-5">Projects</p>
        </div>
      </a>
      <a class="self-center" href="{{ site_url }}/contact">
        <div id="contactButton" class="h-12 w-32 hover:bg-gray-700 hover:duration-[250ms] [&.active]:bg-gray-700 md:h-16">
          <p class="pt-3 md:pt-5">Contact</p>
        </div>
      </a>
  </nav>
</aside>
<script>document.getElementById("{{ active }}Button").classList.toggle("active");</script>
{% endmacro %}

{% macro post(post_title, post_description, post_body, post_footer) %}
<div class="bg-gray-700 text-center flex-col mt-6 px-6 rounded-lg border-2 border-fuchsia-400 shadow-lg shadow-gray-900">
  <h1 class="text-2xl font-bold pt-6">{{ post_title }}</h1>
  <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
  <h2 class="text-xl -mb-3.5">{{ post_description }}</h2>
  <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
  <div class="text-left pb-1 -mb-4">
    {{ post_body }}
  </div>
  <hr class="bg-gray-800 h-px mt-6 mb-1 border-0"/>
  <p class="pb-2 text-xs">{{ post_footer }}</p>
</div>
{% endmacro %}
